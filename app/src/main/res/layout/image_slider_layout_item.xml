<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_imageslider"
        android:layout_width="match_parent"
        android:layout_height="400sp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_splash_macaron" />

    <View
        android:id="@+id/divider"
        app:layout_constraintTop_toBottomOf="@id/iv_imageslider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider"
        />

    <TextView
        android:id="@+id/tv_imagedesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20sp"
        android:layout_marginBottom="70sp"
        android:text="Shopname"
        android:textAlignment="textStart"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="25sp"
         />

    <TextView
        android:id="@+id/tv_imageadress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_imagedesc"
        android:ems="10"
        android:maxLines="2"
        android:layout_marginStart="20sp"
        android:layout_marginTop="10sp"
        android:text="Shopadress"
        android:textAlignment="textStart"
        android:textStyle="bold"
        android:textColor="#fff"
        android:textSize="20sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>